<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/sec_det"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/portada_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/lost"
            android:maxHeight="20dp" />

        <TextView
            android:id="@+id/objeto_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/portada_img"
            android:layout_marginLeft="12dp"
            android:textAlignment="center"
            android:text="Nombre del objeto"
            android:textColor="#000dff"
            android:textSize="22dp"

            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/realizar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/objeto_text"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="6dp">

            <TextView
                android:id="@+id/idText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_marginBottom="2dp"
                android:text="ID"/>

            <TextView
                android:id="@+id/fechaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dp"
                android:textStyle="italic"
                android:layout_below="@+id/idText"
                android:layout_marginBottom="2dp"
                android:text="Fecha de Hallazgo"/>

            <TextView
                android:id="@+id/lugarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fechaText"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="Lugar de Hallazgo"/>

            <TextView
                android:id="@+id/descText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lugarText"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:textStyle="italic"
                android:text="DescripciÃ³n"/>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>
